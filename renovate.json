{
    "extends": [
        "config:base"
    ],
    "labels": [
        "renovate"
    ],
    "schedule": "every weekend",
    "packageRules": [
        {
            "matchUpdateTypes": [
                "patch",
                "pin",
                "digest",
                "minor"
            ],
            "automerge": true
        },
        {
            "matchDepTypes": [
                "devDependencies"
            ],
            "automerge": true
        },
        {
            "matchPackagePatterns": [
                "eslint"
            ],
            "groupName": "eslint"
        },
        {
            "matchPackagePatterns": [
                "spring"
            ],
            "groupName": "spring"
        },
        {
            "matchPackagePatterns": [
                "io.sentry"
            ],
            "groupName": "sentry"
        },
        {
            "matchPackagePatterns": [
                "com.microsoft"
            ],
            "groupName": "microsoft"
        },
        {
            "matchPackagePatterns": [
                "com.google"
            ],
            "groupName": "google"
        },
        {
            "matchPackagePatterns": [
                "com.github.spotbugs"
            ],
            "groupName": "spotbugs"
        },
        {
            "matchPackagePatterns": [
                "org.apache.maven"
            ],
            "groupName": "mvn"
        },
        {
            "matchPackagePatterns": [
                "org.eclipse.jdt"
            ],
            "groupName": "eclipse"
        },
        {
            "matchPackagePatterns": [
                "io.jsonwebtoken"
            ],
            "groupName": "jsonwebtoken"
        }
    ]
}
